<%- include("partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-9" >
            <div class="well">
                <h1><%= post.question %> </h1>
                <p>Answers : <%= post.answer.length%></p>
                <%  post.answer.forEach((answer)=>{  %>
                    <strong><%= answer.creater.username%></strong>
                    <p><%= answer.content.text %></p>
                    <br>
                <% }) %>  
            </div>             
        </div>
    </div>
</div>



